<%- include('../header') %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12"></div>
      <div class="table-responsive">
        <table id="tasksList" class="table table-striped  text-center my-3">
          <!--CABEÇALHO DA TABELA/COLUNAS-->
          <thread>
            <tr class="table-dark">
              <th class="table-light"><a class="nav-link" href="/task/create"> <i class="fas fa-plus me-1"></i> </a>
              </th>
              <th>ID</th>
              <th>Descrição</th>
              <th>Status</th>
              <th>Data de Início</th>
              <th>Data de Conclusão</th>
              <th> </th>
            </tr>
            <tbody>
              <!--FUNÇÃO PRA DETECTAR O JAVASCRIPT (se job for diferente de 0 (ou seja, se houver algum dado), forEach para cada linha pegar o conteúdo)-->
              <% if ( tasks !='' ) { tasks.forEach((row, index)=> { %>
                <!--LINHAS DA TABELA-->
                <tr class="align-middle">
                  <td></td>
                  <td><%= row.id %></td>
                  <td><%= row.descricao %></td>
                  <td><%= row.status %></td>
                  <td><%= new Date(row.data_inicio).toLocaleDateString('en-CA') %></td>
                  <td><%= row.data_conclusao ? new Date(row.data_conclusao).toLocaleDateString('en-CA') : '' %></td>
                  <td>
                    <a href="task/update/<%= row.id %>" class="text-dark"><i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="task/delete/<%= row.id %>" class="text-dark"><i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                  </td>
                </tr>
                <% }) } %>
            </tbody>
          </thread>
        </table>
        <!--SE FOR VAZIO-->
        <% if ( tasks=='' ) { %>
          <h1 class="text-center text-secondary mt-5">
            Nenhuma tarefa encontrada! :(
          </h1>
          <% } %>
      </div>
    </div>
  </div>

<%- include('../footer') %>